#include <iostream>
#include <algorithm> 
using namespace std;

int removeduplicates(int arr[], int n) {
    if (n == 0 || n == 1)
        return n;

    sort(arr, arr + n); 
	int j = 0; 
	 for (int i = 1; i < n; i++) {
        if (arr[j] != arr[i]) {
            j++;
            arr[j] = arr[i];
        }
    }
	return j + 1; 
}
int main() {
    int arr[] = { 2, 1, 2, 7 , 3, 1, 5, 4};
    int n = sizeof(arr) / sizeof(arr[0]);

    int newsize = removeduplicates(arr, n);

    cout << "Array after removing duplicates: ";
    for (int i = 0; i < newsize; i++)
        cout << arr[i] << " ";
	return 0;
}
